{% extends 'base.html.twig' %}

{% block title %}Nouvelle validation formateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Nouvelle validation dâ€™un formateur</h1>

        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }}">
                {% for message in messages %}
                    {{ message }}
                {% endfor %}
            </div>
        {% endfor %}

        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.formateur) }}
                {{ form_widget(form.formateur, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-check mb-3">
                {{ form_widget(form.dateValidation, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.dateValidation, null, {'label_attr': {'class': 'form-check-label'}}) }}
            </div>

            <div class="form-check mb-3">
                {{ form_widget(form.pedagogiquementValide, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.pedagogiquementValide, null, {'label_attr': {'class': 'form-check-label'}}) }}
            </div>

            <div class="form-check mb-3">
                {{ form_widget(form.premiereFois, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.premiereFois, null, {'label_attr': {'class': 'form-check-label'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.commentaire) }}
                {{ form_widget(form.commentaire, {'attr': {'class': 'form-control'}}) }}
            </div>

            <button type="submit" class="btn btn-primary">Valider</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
